<div class="container">
  <h1 class="my-4 text-center">Gêneros</h1>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Nome</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td class="text-end" colspan="3">
              <%= link_to 'Show', genre, class: 'btn btn-info btn-sm' %>
              <%= link_to 'Editar', edit_genre_path(genre), class: 'btn btn-warning btn-sm' %>
            </td>
            <%# <td><%= link_to 'Destroy', genre, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'Novo Gênero', new_genre_path, class: 'btn btn-primary my-4' %>
</div>
