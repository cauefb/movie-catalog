<div class="container">
  <h1 class="my-4 text-center">Lista de Filmes</h1>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="thead-dark">
        <tr>
          <th>Título</th>
          <th>Ano de Lançamento</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @movies.each do |movie| %>
          <tr>
            <td><%= movie.title %></td>
            <td><%= movie.release_year %></td>
            <td>
              <%= link_to 'Ver', movie, class: 'btn btn-primary' %>
              <%= link_to 'Editar', edit_movie_path(movie), class: 'btn btn-warning' %>
              <%= link_to 'Excluir', movie, method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<%= link_to 'Adicionar Filme', new_movie_path, class: 'btn btn-success' %>
</div>