<div class="container">
  <h1><%= action_name.capitalize %> Filme</h1>

  <%= form_with model: @movie, local: true do |form| %>
    <% if @movie.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@movie.errors.count, "erro") %> proibiu este filme de ser salvo:</h4>
        <ul>
          <% @movie.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :release_year, "Ano de LanÃ§amento" %>
      <%= form.number_field :release_year, class: 'form-control', value: @movie.release_year %>
    </div>

    <div class="form-group">
      <%= form.label :synopsis %>
      <%= form.text_area :synopsis, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :country_of_origin %>
      <%= form.text_field :country_of_origin, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :duration %>
      <%= form.number_field :duration, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :director %>
      <%= form.text_field :director, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :genre %>
      <%= form.text_field :genre, class: 'form-control' %>
    </div>

    <%= form.submit 'Salvar Filme', class: 'btn btn-primary' %>
  <% end %>

  <%= link_to 'Voltar', movies_path, class: 'btn btn-secondary' %>
</div>