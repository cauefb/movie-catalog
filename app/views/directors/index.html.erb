<h1>Directors</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Nationality</th>
      <th>Birth Date</th>
      <th>Favorite Genre</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @directors.each do |director| %>
      <tr>
        <td><%= director.name %></td>
        <td><%= director.nationality %></td>
        <td><%= director.birth_date.strftime("%d/%m/%Y") %></td>
        <td><%= director.favorite_genre %></td>
        <td>
          <%= link_to 'Show', director_path(director), class: 'btn btn-primary btn-sm' %>
          <%= link_to 'Edit', edit_director_path(director), class: 'btn btn-secondary btn-sm' %>
          <%= link_to 'Delete', director_path(director), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Director', new_director_path, class: 'btn btn-success' %>
